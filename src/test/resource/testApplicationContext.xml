		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	<bean id="authDao" class="com.sjw.ShiroTest.DaoImpl.AuthDaoImpl">
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
